@model Assignment_day06.Models.Enrollment

@{
    ViewData["Title"] = "Student Course Result";
}

<h2>Student Course Result</h2>

<table class="table table-bordered">
    <tr>
        <th>Student Name</th>
        <td>@Model.Student.FullName</td>
    </tr>
    <tr>
        <th>Course Name</th>
        <td>@Model.Course.Name</td>
    </tr>
    <tr>
        <th>Degree</th>
        <td style="color:@(Model.Degree >= 50 ? "green" : "red"); font-weight:bold;">
            @Model.Degree
        </td>
    </tr>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
