@model Assignment_day06.Models.Course

@{
    ViewData["Title"] = "Edit Course";
}

<h1>Edit Course</h1>

<form asp-action="Edit" method="post">
    <input asp-for="CourseId" type="hidden" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Credits"></label>
        <input asp-for="Credits" class="form-control" type="number" />
        <span asp-validation-for="Credits" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
