@model IEnumerable<Assignment_day06.Models.Course>

@{
    ViewData["Title"] = "Courses List";
}

<h1>Courses List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">+ Add New Course</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Course Name</th>
            <th>Credits</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Credits</td>
                <td>@course.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@course.CourseId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@course.CourseId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
