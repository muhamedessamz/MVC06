@model UniversityApp.Models.ViewModels.StudentListViewModel

@{
    ViewData["Title"] = "Students";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Students List</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Student
        </a>
    </div>

    <!-- Search + Filter -->
    <form method="get" asp-action="ShowAll" class="row g-2 mb-3">
        <div class="col-md-4">
            <input type="text" name="search" value="@Model.Search" placeholder="Search by name" class="form-control" />
        </div>
        <div class="col-md-4">
            <select asp-for="DepartmentId" class="form-control" asp-items="ViewBag.Departments">
                <option value="">-- Select Department --</option>
            </select>
        </div>
        <div class="col-md-4 d-grid">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </form>

    <!-- Students Table -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Department</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Students.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No students found</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var student in Model.Students)
                        {
                            <tr>
                                <td>@student.Id</td>
                                <td>@student.Name</td>
                                <td>@student.Age</td>
                                <td>@student.DepartmentName</td>
                                <td class="text-center">
                                    <a asp-action="ShowDetails" asp-route-id="@student.Id" class="btn btn-info btn-sm me-1">Details</a>
                                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning btn-sm me-1">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@student.Id" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav class="mt-3">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link"
                           asp-action="ShowAll"
                           asp-route-page="@i"
                           asp-route-search="@Model.Search"
                           asp-route-departmentId="@Model.DepartmentId">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
