@model UniversityApp.Models.ViewModels.StudentCourseResultVM
@{
    ViewData["Title"] = "Student Course Result";
}
<div class="card p-4 shadow-sm">
    <h3 class="text-center text-primary mb-3">Student Course Result</h3>

    <p><strong>Student:</strong> @Model.StudentName</p>
    <p><strong>Course:</strong> @Model.CourseName</p>
    <p><strong>Degree:</strong> <span class="@Model.CssClass">@Model.Grade</span></p>
    <p><strong>Min Degree:</strong> @Model.MinDegree</p>

    <a asp-controller="Student" asp-action="ShowAll" class="btn btn-secondary mt-3">Back</a>
</div>
